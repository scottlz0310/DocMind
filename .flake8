[flake8]
max-line-length = 100
extend-ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by isort)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .mypy_cache,
    .ruff_cache,
    htmlcov
per-file-ignores =
    __init__.py:F401
    tests/*:T20