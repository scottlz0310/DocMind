{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "仮想環境アクティベート",
            "type": "shell",
            "command": "source",
            "args": ["venv/bin/activate"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "依存関係インストール",
            "type": "shell",
            "command": "venv/bin/pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "テスト実行",
            "type": "shell",
            "command": "venv/bin/python",
            "args": ["-m", "pytest", "tests/", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "検索マネージャーテスト",
            "type": "shell",
            "command": "venv/bin/python",
            "args": ["-m", "pytest", "tests/test_search_manager.py", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "アプリケーション実行",
            "type": "shell",
            "command": "venv/bin/python",
            "args": ["main.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "env": {
                    "QT_QPA_PLATFORM": "xcb",
                    "PYTHONPATH": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "コードフォーマット",
            "type": "shell",
            "command": "venv/bin/black",
            "args": ["src/", "tests/", "main.py", "--line-length", "100"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "型チェック",
            "type": "shell",
            "command": "venv/bin/mypy",
            "args": ["src/", "--ignore-missing-imports"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}