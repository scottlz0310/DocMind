{
  "validation_suite": {
    "default_level": "daily",
    "timeout_seconds": 3600,
    "parallel_execution": true,
    "generate_report": true,
    "fail_fast": false,
    "output_dir": "validation_results",
    "components": {
      "startup": {
        "enabled": true,
        "timeout": 300
      },
      "document_processing": {
        "enabled": true,
        "timeout": 600,
        "test_data_size": "medium"
      },
      "search": {
        "enabled": true,
        "timeout": 900,
        "performance_threshold": 5.0
      },
      "gui": {
        "enabled": false,
        "timeout": 1200,
        "headless": true
      },
      "data_persistence": {
        "enabled": true,
        "timeout": 600
      },
      "error_handling": {
        "enabled": true,
        "timeout": 300
      },
      "performance": {
        "enabled": true,
        "timeout": 1800,
        "memory_limit_gb": 2.0,
        "cpu_threshold_percent": 80.0
      },
      "security": {
        "enabled": true,
        "timeout": 600
      },
      "end_to_end": {
        "enabled": true,
        "timeout": 1800
      },
      "compatibility": {
        "enabled": true,
        "timeout": 900
      },
      "real_world": {
        "enabled": false,
        "timeout": 3600
      }
    }
  },
  "ci_cd_pipeline": {
    "timeout_minutes": 120,
    "stages": {
      "build": {
        "enabled": true,
        "timeout": 600
      },
      "unit_test": {
        "enabled": true,
        "timeout": 1200,
        "coverage_threshold": 80.0
      },
      "integration_test": {
        "enabled": true,
        "timeout": 1800
      },
      "validation": {
        "enabled": true,
        "timeout": 3600
      },
      "security_scan": {
        "enabled": true,
        "timeout": 900
      },
      "performance_test": {
        "enabled": true,
        "timeout": 1800
      },
      "deploy": {
        "enabled": false,
        "timeout": 600
      }
    },
    "quality_gates": {
      "min_test_coverage": 80.0,
      "max_critical_issues": 0,
      "max_performance_regression": 10.0
    },
    "notifications": {
      "enable_notifications": true,
      "notification_webhook": null,
      "notification_email": null
    }
  },
  "quality_gates": {
    "test_coverage": {
      "enabled": true,
      "blocking": true,
      "thresholds": {
        "line_coverage": {
          "min_value": 80.0,
          "warning_threshold": 85.0,
          "target_value": 90.0
        },
        "branch_coverage": {
          "min_value": 75.0,
          "warning_threshold": 80.0,
          "target_value": 85.0
        }
      }
    },
    "security_issues": {
      "enabled": true,
      "blocking": true,
      "thresholds": {
        "critical_issues": {
          "max_value": 0
        },
        "high_issues": {
          "max_value": 2,
          "warning_threshold": 1
        },
        "medium_issues": {
          "max_value": 10,
          "warning_threshold": 5
        }
      }
    },
    "performance_regression": {
      "enabled": true,
      "blocking": false,
      "warning_only": true,
      "thresholds": {
        "max_regression_percent": {
          "max_value": 10.0,
          "warning_threshold": 5.0
        },
        "memory_regression_percent": {
          "max_value": 15.0,
          "warning_threshold": 10.0
        }
      }
    },
    "code_quality": {
      "enabled": true,
      "blocking": false,
      "thresholds": {
        "complexity_score": {
          "max_value": 10,
          "warning_threshold": 8
        },
        "duplication_percent": {
          "max_value": 5.0,
          "warning_threshold": 3.0
        }
      }
    }
  },
  "scheduler": {
    "schedules": {
      "commit": {
        "enabled": true,
        "validation_level": "commit",
        "min_interval_hours": 0,
        "max_concurrent_runs": 1,
        "timeout_minutes": 30,
        "watch_branches": ["main", "master", "develop"],
        "skip_if_no_changes": true,
        "notify_on_success": false,
        "notify_on_failure": true
      },
      "daily": {
        "enabled": true,
        "validation_level": "daily",
        "daily_time": "02:00",
        "min_interval_hours": 20,
        "max_concurrent_runs": 1,
        "timeout_minutes": 90,
        "skip_if_no_changes": false,
        "notify_on_success": false,
        "notify_on_failure": true
      },
      "weekly": {
        "enabled": true,
        "validation_level": "weekly",
        "weekly_day": "sunday",
        "weekly_time": "01:00",
        "min_interval_hours": 144,
        "max_concurrent_runs": 1,
        "timeout_minutes": 180,
        "skip_if_no_changes": false,
        "notify_on_success": true,
        "notify_on_failure": true
      },
      "release": {
        "enabled": false,
        "validation_level": "release",
        "timeout_minutes": 240,
        "notify_on_success": true,
        "notify_on_failure": true
      }
    },
    "notifications": {
      "channels": [
        "webhook:https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
        "email:team@example.com"
      ]
    }
  },
  "auto_actions": {
    "notification": {
      "enabled": true,
      "trigger_conditions": ["failed", "warning"],
      "timeout_seconds": 60
    },
    "rollback": {
      "enabled": false,
      "trigger_conditions": ["failed"],
      "timeout_seconds": 300,
      "parameters": {
        "rollback_command": "git revert HEAD --no-edit"
      }
    },
    "block_deployment": {
      "enabled": true,
      "trigger_conditions": ["failed"],
      "timeout_seconds": 30,
      "parameters": {
        "block_file": ".deployment_blocked"
      }
    },
    "create_issue": {
      "enabled": false,
      "trigger_conditions": ["failed"],
      "timeout_seconds": 120,
      "parameters": {
        "github_token": "${GITHUB_TOKEN}",
        "repository": "your-org/docmind"
      }
    },
    "send_email": {
      "enabled": false,
      "trigger_conditions": ["failed"],
      "timeout_seconds": 60,
      "parameters": {
        "smtp_server": "smtp.gmail.com",
        "smtp_port": 587,
        "username": "${EMAIL_USERNAME}",
        "password": "${EMAIL_PASSWORD}",
        "to_addresses": ["team@example.com"]
      }
    },
    "webhook": {
      "enabled": false,
      "trigger_conditions": ["failed", "warning"],
      "timeout_seconds": 30,
      "parameters": {
        "webhook_url": "${WEBHOOK_URL}"
      }
    }
  },
  "test_data": {
    "datasets": {
      "small": {
        "document_count": 100,
        "total_size_mb": 10,
        "file_types": ["txt", "pdf", "docx"]
      },
      "medium": {
        "document_count": 1000,
        "total_size_mb": 100,
        "file_types": ["txt", "pdf", "docx", "xlsx", "md"]
      },
      "large": {
        "document_count": 10000,
        "total_size_mb": 1000,
        "file_types": ["txt", "pdf", "docx", "xlsx", "md", "pptx"]
      },
      "xlarge": {
        "document_count": 50000,
        "total_size_mb": 5000,
        "file_types": ["txt", "pdf", "docx", "xlsx", "md", "pptx", "csv"]
      }
    },
    "generation": {
      "use_synthetic_data": true,
      "include_edge_cases": true,
      "include_corrupted_files": true,
      "include_large_files": true,
      "max_file_size_mb": 100,
      "languages": ["ja", "en"],
      "encodings": ["utf-8", "shift_jis", "euc-jp"]
    }
  },
  "reporting": {
    "formats": ["html", "json", "xml"],
    "include_charts": true,
    "include_trends": true,
    "include_performance_graphs": true,
    "retention_days": 30,
    "archive_after_days": 90
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_rotation": {
      "max_size_mb": 10,
      "backup_count": 5
    },
    "console_output": true,
    "file_output": true
  }
}